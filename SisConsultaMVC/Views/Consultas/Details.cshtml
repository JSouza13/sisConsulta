@model SisConsultaMVC.Models.Consulta

@{
    ViewData["Title"] = "Details";
}

<h2>Detalhes da consulta</h2>
<hr />

<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <div class="card">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.DataConsulta)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DataConsulta)
            </dd>            
            <dt>
                @Html.DisplayNameFor(model => model.Medico)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Medico.Nome)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Paciente)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Paciente.NomePaciente)
            </dd>
        </dl>
    </div>
</div>

<div>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.ConsultaID">Editar</a>
    <input type="button" value="Voltar" class="btn" onclick="history.go(-1)" />
</div>
