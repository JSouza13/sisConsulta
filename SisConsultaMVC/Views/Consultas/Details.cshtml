@model SisConsultaMVC.Models.Consulta

@{
    ViewData["Title"] = "Details";
}
<!-- #END# Inline Layout -->
<!-- Inline Layout | With Floating Label -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Informações detalhadas da consulta
                    @*<small>Cadastro de novo paciente</small>*@
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);">Action</a></li>
                            <li><a href="javascript:void(0);">Another action</a></li>
                            <li><a href="javascript:void(0);">Something else here</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                <div class="row clearfix">
                    <dl class="col-md-12">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <dt>
                                        @Html.DisplayNameFor(model => model.Medico)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.Medico.Nome)
                                    </dd>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <dt>
                                        @Html.DisplayNameFor(model => model.Paciente)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.Paciente.NomePaciente)
                                    </dd>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <dt>
                                        @Html.DisplayNameFor(model => model.DataConsulta)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.DataConsulta)
                                    </dd>
                                </div>
                            </div>
                        </div>
                    </dl>
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="ConsultaID" />
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <a class="btn bg-deep-purple btn-lg m-l-15 waves-effect" asp-action="Edit" asp-route-id="@Model.ConsultaID">Editar</a>
                            <button type="button" class="btn bg-blue-grey btn-lg m-l-15 waves-effect" onclick="history.go(-1)">Voltar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>