@model IEnumerable<SisConsultaMVC.Models.Consulta>

@{
    ViewData["Title"] = "Simple Search"; ViewData["Title"] = "Simple Search";}



<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Busca por data
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);">Action</a></li>
                            <li><a href="javascript:void(0);">Another action</a></li>
                            <li><a href="javascript:void(0);">Something else here</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                <div class="row clearfix">
                    <form class="navbar-form navbar-left" asp-action="SimpleSearch">
                        <div class="col-xs-6">
                            <h2 class="card-inside-title">Range</h2>
                            @*<div class="input-daterange input-group" id="bs_datepicker_range_container">*@
                            <div class="input-daterange input-group demo-masked-input">
                                <span class="input-group-addon">
                                    <i class="material-icons">date_range</i>
                                </span>
                                <div class="form-line">
                                    <input name="minDate" type="text" class="form-control date" placeholder="Data de ínicio">
                                </div>

                                <span class="input-group-addon">até</span>

                                <span class="input-group-addon">
                                    <i class="material-icons">date_range</i>
                                </span>
                                <div class="form-line">
                                    <input name="maxDate" type="text" class="form-control date" placeholder="Data final">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <button type="submit" class="btn bg-deep-purple btn-lg m-l-15 waves-effect">Procurar</button>
                                <button type="button" class="btn bg-blue-grey btn-lg m-l-15 waves-effect" onclick="history.go(-1)">Voltar</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="panel panel-col-purple">
                    <div class="panel-body">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr class="bg-deep-purple">
                                    <th>
                                        @Html.DisplayNameFor(model => model.DataConsulta)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Medico)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Paciente)
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(model => item.DataConsulta)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => item.Medico.Nome)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => item.Paciente.NomePaciente)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>                                       
                </div>             
            </div>
        </div>
    </div>
</div>
