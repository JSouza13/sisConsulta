@model IEnumerable<SisConsultaMVC.Models.Consulta>


@{
    ViewData["Title"] = "Index";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Consultas por período
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);">Action</a></li>
                            <li><a href="javascript:void(0);">Another action</a></li>
                            <li><a href="javascript:void(0);">Something else here</a></li>
                        </ul>
                    </li>
                </ul>
            </div>

            <div class="body">
                <div class="row clearfix">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <form class="navbar-form navbar-left" asp-action="SimpleSearch">
                            <div class="col-xs-6">
                                <div class="input-daterange input-group demo-masked-input">
                                    <span class="input-group-addon">
                                        <i class="material-icons">date_range</i>
                                    </span>
                                    <div class="form-line">
                                        <input name="minDate" type="text" class="form-control date" placeholder="Data de ínicio">
                                    </div>

                                    <span class="input-group-addon">até</span>

                                    <span class="input-group-addon">
                                        <i class="material-icons">date_range</i>
                                    </span>
                                    <div class="form-line">
                                        <input name="maxDate" type="text" class="form-control date" placeholder="Data final">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <button type="submit" class="btn bg-deep-purple btn-lg m-l-15 waves-effect">Procurar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Registro de consultas
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);">Action</a></li>
                            <li><a href="javascript:void(0);">Another action</a></li>
                            <li><a href="javascript:void(0);">Something else here</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                <div class="row clearfix">
                    <div class="panel panel-col-purple">
                        <div class="panel-body">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr class="bg-deep-purple">
                                        <th class="col-lg-4 col-md-4 col-sm-4 col-xs-8">
                                            @Html.DisplayNameFor(model => model.DataConsulta)
                                        </th>
                                        <th class="col-lg-4 col-md-4 col-sm-4 col-xs-8">
                                            @Html.DisplayNameFor(model => model.Paciente)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="col-lg-4 col-md-4 col-sm-4 col-xs-8">
                                                @Html.DisplayFor(modelItem => item.DataConsulta)
                                            </td>
                                            <td class="col-lg-4 col-md-4 col-sm-4 col-xs-8">
                                                @Html.DisplayFor(modelItem => item.Paciente.NomePaciente)
                                            </td>
                                            <td class="col-lg-3 col-md-3 col-sm-3 col-xs-6">
                                                <a type="button" class="btn bg-indigo btn-circle waves-effect waves-circle waves-float" data-toggle="tooltip" data-placement="top" title="Editar" asp-action="Edit" asp-route-id="@item.ConsultaID">
                                                    <i class="material-icons">edit</i>
                                                </a>
                                                <a type="button" class="btn btn-info btn-circle waves-effect waves-circle waves-float" data-toggle="tooltip" data-placement="top" title="Detalhes" asp-action="Details" asp-route-id="@item.ConsultaID">
                                                    <i class="material-icons">style</i>
                                                </a>
                                                <a type="button" class="btn bg-red btn-circle waves-effect waves-circle waves-float" data-toggle="tooltip" data-placement="top" title="Excluir" asp-action="Delete" asp-route-id="@item.ConsultaID">
                                                    <i class="material-icons">delete</i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <a asp-action="Create" class="btn bg-deep-purple btn-lg m-l-15 waves-effect">Novo consulta</a>
                                <button type="button" class="btn bg-blue-grey btn-lg m-l-15 waves-effect" onclick="history.go(-1)">Voltar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>            