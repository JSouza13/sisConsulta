@model SisConsultaMVC.Models.Consulta

@{
    ViewData["Title"] = "Create";
}

<!-- #END# Inline Layout -->
<!-- Inline Layout | With Floating Label -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Cadastro de novo médico
                    @*<small>Cadastro de novo paciente</small>*@
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);">Action</a></li>
                            <li><a href="javascript:void(0);">Another action</a></li>
                            <li><a href="javascript:void(0);">Something else here</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">

                @using (Html.BeginForm("Create", "Consultas", FormMethod.Post))
                {
                        @Html.ValidationSummary()
                    <div class="row clearfix">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <label asp-for="MedicoID"></label>
                                    <select asp-for="MedicoID" class="form-control show-tick" asp-items="ViewBag.MedicoID"></select>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <label asp-for="PacienteID" class="control-label"></label>
                                    <select asp-for="PacienteID" class="form-control" asp-items="ViewBag.PacienteID"></select>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <label asp-for="DataConsulta" class="form-control" name="dataConsulta"></label>
                                    <input type="text" asp-for="DataConsulta" class="form-control date_time" placeholder="Ex: 30/07/2016 23:59" required="" />
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <label asp-for="DataFinalConsulta" class="form-control" name="dataConsulta"></label>
                                    <input type="text" asp-for="DataFinalConsulta" class="form-control date_time" placeholder="Ex: 30/07/2016 23:59" required="" />
                                </div>
                            </div>
                        </div>


                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <button type="submit" class="btn bg-deep-purple btn-lg m-l-15 waves-effect">Salvar</button>
                            <button type="button" class="btn bg-blue-grey btn-lg m-l-15 waves-effect" onclick="history.go(-1)">Voltar</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>





