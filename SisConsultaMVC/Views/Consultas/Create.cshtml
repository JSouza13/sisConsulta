@model SisConsultaMVC.Models.Consulta

@{
    ViewData["Title"] = "Create";
}

<h2>Cadastrar nova consulta</h2>
<hr />
<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">

    @using (Html.BeginForm("Create", "Consultas", FormMethod.Post))
    {

        @Html.ValidationSummary()


        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-6 form-group">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="input-datetime input-group demo-masked-input">
                    <span class="input-group-addon">
                        <i class="material-icons">account_box</i>
                    </span>
                    <label asp-for="MedicoID"></label>
                    <select asp-for="MedicoID" class="form-control show-tick" asp-items="ViewBag.MedicoID"></select>
                </div>
            </div>
            <div class="form-group">
                <div class="input-datetime input-group demo-masked-input">
                    <span class="input-group-addon">
                        <i class="material-icons">account_box</i>
                    </span>
                    <label asp-for="PacienteID" class="control-label"></label>
                    <select asp-for="PacienteID" class="form-control" asp-items="ViewBag.PacienteID"></select>
                </div>
            </div>
            <div class="form-group">
                <div class="input-datetime input-group demo-masked-input">
                    <span class="input-group-addon">
                        <i class="material-icons">date_range</i>
                    </span>
                    <div class="form-line">
                        <label asp-for="DataConsulta" class="control-label"></label>
                        <input asp-for="DataConsulta" class="form-control" placeholder="Ex: 30/07/2016 23:59" />
                        <span asp-validation-for="DataConsulta" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-default" />
            <input type="button" value="Voltar" class="btn" onclick="history.go(-1)" />
        </div>
    }
</div>




