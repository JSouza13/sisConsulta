@model SisConsultaMVC.Models.Consulta

@{
    ViewData["Title"] = "Create";
}

<h2>Cadastrar nova consulta</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MedicoID" class="control-label"></label>
                <select asp-for="MedicoID" class ="form-control" asp-items="ViewBag.MedicoID"></select>
            </div>
            <div class="form-group">
                <label asp-for="PacienteID" class="control-label"></label>
                <select asp-for="PacienteID" class ="form-control" asp-items="ViewBag.PacienteID"></select>
            </div>
            <div class="form-group">
                <label asp-for="DataConsulta" class="control-label"></label>
                <input asp-for="DataConsulta" class="form-control" />
                <span asp-validation-for="DataConsulta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
                <input type="button" value="Voltar" class="btn" onclick="history.go(-1)" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
