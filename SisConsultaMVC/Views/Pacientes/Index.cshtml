@model IEnumerable<SisConsultaMVC.Models.Paciente>

@{
    ViewData["Title"] = "Pacientes";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Pacientes cadastrados
                    @*<small>Cadastro de novo paciente</small>*@
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);">Action</a></li>
                            <li><a href="javascript:void(0);">Another action</a></li>
                            <li><a href="javascript:void(0);">Something else here</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                <div class="row clearfix">
                    <table class="table">
                        <thead>
                            <tr>

                                <th class="col-lg-3 col-md-3 col-sm-3 col-xs-6">
                                    @Html.DisplayNameFor(model => model.NomePaciente)
                                </th>

                                <th class="col-lg-3 col-md-3 col-sm-3 col-xs-6">
                                    @Html.DisplayNameFor(model => model.Cpf)
                                </th>
                                <th class="col-lg-3 col-md-3 col-sm-3 col-xs-6">
                                    @Html.DisplayNameFor(model => model.NumTelefone)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td class="col-lg-3 col-md-3 col-sm-3 col-xs-6">
                                    @Html.DisplayFor(modelItem => item.NomePaciente)
                                </td>
                                <td class="col-lg-3 col-md-3 col-sm-3 col-xs-6">
                                    @Html.DisplayFor(modelItem => item.Cpf)
                                </td>
                                <td class="col-lg-2 col-md-2 col-sm-2 col-xs-4">
                                    @Html.DisplayFor(modelItem => item.NumTelefone)
                                </td>

                                <td class="col-lg-3 col-md-3 col-sm-3 col-xs-6">
                                    <a type="button" class="btn btn-warning btn-circle waves-effect waves-circle waves-float" data-toggle="tooltip" data-placement="top" title="Editar" asp-action="Edit" asp-route-id="@item.PacienteID">
                                        <i class="material-icons">edit</i>
                                    </a>
                                    <a type="button" class="btn btn-info btn-circle waves-effect waves-circle waves-float" data-toggle="tooltip" data-placement="top" title="Detalhes" asp-action="Details" asp-route-id="@item.PacienteID">
                                        <i class="material-icons">style</i>
                                    </a>
                                    <a type="button" class="btn btn-danger btn-circle waves-effect waves-circle waves-float" data-toggle="tooltip" data-placement="top" title="Excluir" asp-action="Delete" asp-route-id="@item.PacienteID">
                                        <i class="material-icons">delete</i>
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>

                    <form>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <a asp-action="Create" class="btn btn-success btn-lg m-l-15 waves-effect">Novo paciente</a>
                            <button type="button" class="btn btn-lg m-l-15 waves-effect" onclick="history.go(-1)">Voltar</button>
                        </div>
                    </form>

                </div>

            </div>

        </div>
    </div>
</div>


