@model SisConsultaMVC.Models.Medico

@{
    ViewData["Title"] = "Create";
}

<!-- #END# Inline Layout -->
<!-- Inline Layout | With Floating Label -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Cadastro de novo médico
                    @*<small>Cadastro de novo paciente</small>*@
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);">Action</a></li>
                            <li><a href="javascript:void(0);">Another action</a></li>
                            <li><a href="javascript:void(0);">Something else here</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                <div class="demo-masked-input">
                    <form asp-action="Create">
                        <div class="row clearfix">

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>                                                                              

                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input asp-for="Nome" class="form-control" />
                                        <label asp-for="Nome" class="form-label"></label>
                                    </div>
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input asp-for="Email" class="form-control" />
                                        <label asp-for="Email" class="form-label"></label>
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input asp-for="Especialidade" class="form-control" />
                                        <label asp-for="Especialidade" class="form-label"></label>
                                    </div>
                                    <span asp-validation-for="Especialidade" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <button type="submit" class="btn bg-deep-purple btn-lg m-l-15 waves-effect">Salvar</button>
                                <button type="button" class="btn bg-blue-grey btn-lg m-l-15 waves-effect" onclick="history.go(-1)">Voltar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

